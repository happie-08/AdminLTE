@model AdminLTE.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_MyAdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow border border-primary">
                    <div class="card-header bg-primary text-white text-center">
                        <h4 class="mb-0">Update Your Profile</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />

                            <!-- Profile Image -->
                            <div class="text-center mb-4">
                                <img src="~/uploads/@(string.IsNullOrEmpty(Model.Image) ? "default.png" : Model.Image)"
                                     class="rounded-circle shadow"
                                     style="width: 120px; height: 120px; object-fit: cover;" />
                                <div>
                                    <label class="btn btn-sm btn-light mt-2">
                                        <i class="fas fa-camera"></i> Choose File
                                        <input type="file" name="ImageFile" hidden />
                                    </label>
                                </div>
                            </div>

                            <!-- Full Name & Phone -->
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label><strong>Full Name</strong></label>
                                    <input asp-for="Name" class="form-control" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label><strong>Phone Number</strong></label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                </div>
                            </div>

                            <!-- Email & Username -->
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label><strong>Email</strong></label>
                                    <input asp-for="Email" class="form-control" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label><strong>Username</strong></label>
                                    <input asp-for="UserName" class="form-control" />
                                </div>
                            </div>

                            <!-- Address -->
                            <div class="form-group">
                                <label><strong>Address</strong></label>
                                <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                            </div>

                            <!-- DOB & Gender -->
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label><strong>Date of Birth</strong></label>
                                    <input asp-for="DOB" type="date" class="form-control" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label><strong>Gender</strong></label>
                                    <div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="Gender" value="Male" />
                                            <label class="form-check-label">Male</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="Gender" value="Female" />
                                            <label class="form-check-label">Female</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Hobby -->
                            <div class="form-group">
                                <label><strong>Hobby</strong></label>
                                @{
                                    var allHobbies = new[] { "Gaming", "Dansing", "Coding", "Music", "Sports", "Travel", "Cooking", "Other" };
                                    var selectedHobbies = Model.Hobby?.Split(", ") ?? Array.Empty<string>();
                                }
                                <div class="d-flex flex-wrap">
                                    @foreach (var hobby in allHobbies)
                                    {
                                        <div class="form-check form-check-inline mr-3 mb-2">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   name="Input.Hobby"
                                                   value="@hobby"
                                                   @(selectedHobbies.Contains(hobby) ? "checked" : "") />
                                            <label class="form-check-label">@hobby</label>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="form-group text-center mt-4">
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="fas fa-save"></i> Save Changes
                                </button>
                                <a asp-action="Index" class="btn btn-secondary ml-2 px-4">Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
