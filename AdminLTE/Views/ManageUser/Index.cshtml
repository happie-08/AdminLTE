@model IEnumerable<AdminLTE.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_MyAdminLayout.cshtml";
}

<!-- Success Message (if any) -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-check"></i> Success!</h5>
        @TempData["Success"]
    </div>
}

<!-- Main Content -->
<section class="content">
    <div class="container-fluid">
        <div class="row mb-3">
            <div class="col-md-6">
                <h2 class="font-weight-bold text-primary">Manage Users</h2>
            </div>
            <div class="col-md-6 text-right">
                <a href="/" class="btn btn-outline-primary mr-2">
                    <i class="fas fa-home"></i> Back to Home
                </a>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New User
                </a>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header bg-dark text-white">
                <h4 class="card-title">All Registered Users</h4>
            </div>

            <div class="card-body table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Profile</th>
                            <th>Email / Phone</th>
                            <th>Username</th>
                            <th>Address</th>
                            <th>DOB / Gender</th>
                            <th>Hobby</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            var index = 1;
                            foreach (var user in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>
                                        <img src="@Url.Content("~/uploads/" + (string.IsNullOrEmpty(user.Image) ? "default.png" : user.Image))"
                                             class="img-circle elevation-2"
                                             style="width: 40px; height: 40px; object-fit: cover;"
                                             alt="User Image" />
                                        <div class="small font-weight-bold">@((user.Name ?? "No Name"))</div>
                                    </td>
                                    <td>
                                        <strong>@(user.Email ?? "-")</strong><br />
                                        <span class="text-muted">@((user.PhoneNumber ?? "-"))</span>
                                    </td>
                                    <td>@(user.UserName ?? "-")</td>
                                    <td>@(user.Address ?? "-")</td>
                                    <td>
                                        @(user.DOB.HasValue? user.DOB.Value.ToString("dd/MM/yyyy") : "-")<br />
                                        @(user.Gender ?? "-")
                                    </td>
                                    <td>@(user.Hobby ?? "-")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-info text-white">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@user.Id"
                                           class="btn btn-sm btn-danger text-white ml-1"
                                           onclick="return confirm('Are you sure you want to delete this user?');">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-danger">No users found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <!-- Optional custom JavaScript -->
}
