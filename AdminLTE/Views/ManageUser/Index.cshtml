@model IEnumerable<AdminLTE.Models.ApplicationUser>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "Users List";
    Layout = "~/Views/Shared/_MyAdminLayout.cshtml";
    var index = 1;
}

<!-- Content Header -->
<section class="content-header">
    <div class="container-fluid">
        <h3 class="mb-2 font-weight-bold"> Users List</h3>
        <div class="mb-3 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Create New User
            </a>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-outline card-primary">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table id="userTable" class="table table-striped table-bordered mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Profile</th>
                                <th>Email / Phone</th>
                                <th>Username</th>
                                <th>Address</th>
                                <th>DOB / Gender</th>
                                <th>Hobby</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>
                                            <img src="@Url.Content("~/uploads/" + (string.IsNullOrEmpty(user.Image) ? "default.png" : user.Image))"
                                                 class="img-circle elevation-2"
                                                 style="width: 40px; height: 40px; object-fit: cover;" />
                                            <div class="font-weight-bold">@user.Name</div>
                                            <small class="text-muted">ID: @user.Id</small>
                                        </td>
                                        <td>
                                            <strong>@(user.Email ?? "-")</strong><br />
                                            <span class="text-muted">@user.PhoneNumber</span>
                                        </td>
                                        <td>@(user.UserName ?? "-")</td>
                                        <td>@(user.Address ?? "-")</td>
                                        <td>
                                            @(user.DOB?.ToString("dd/MM/yyyy") ?? "-")<br />
                                            @user.Gender
                                        </td>
                                        <td>@(user.Hobby ?? "-")</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-info text-white">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <button type="button"
                                                    class="btn btn-sm btn-danger text-white mt-1"
                                                    data-toggle="modal"
                                                    data-target="#deleteModal"
                                                    data-userid="@user.Id"
                                                    data-username="@user.UserName">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-danger">No users found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="deleteForm" method="post">
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete <strong id="deleteUserName"></strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Include jQuery if not already included -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Include DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

    <script>
        $(document).ready(function () {
            var table = $('#userTable').DataTable({
                responsive: true,
                pageLength: 10,
                lengthChange: false,
                autoWidth: false
            });

            // Handle Delete button click (works after table redraw)
            $('#userTable').on('click', 'button[data-toggle="modal"]', function () {
                var button = $(this);
                var userId = button.data('userid');
                var userName = button.data('username');

                $('#deleteUserName').text(userName);
                $('#deleteForm').attr('action', '/ManageUser/DeleteConfirmed/' + userId);
                $('#deleteModal').modal('show');
            });
        });
    </script>
}
