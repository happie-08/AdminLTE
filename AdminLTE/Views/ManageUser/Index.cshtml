@model IEnumerable<AdminLTE.Models.ApplicationUser>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "Users List";
    Layout = "~/Views/Shared/_MyAdminLayout.cshtml";
    var index = 1;
}
@{
    var breadcrumbs = new List<(string Label, string? Url)>
    {
        ("Home", "/"),
        (" Users List", null) // last item (active, no URL)
    };
}

@section PageHeader {
    @await Html.PartialAsync("_PageHeader", (PageTitle: "Users List", Breadcrumbs: breadcrumbs))
}


<!-- Main Content -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-outline card-primary">
            <div class="card-body p-0">
                <div class="table-responsive p-2">
                    <table id="userTable" class="table table-bordered table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th style="display:none">#</th> <!-- hidden index -->
                                <th>Profile</th>
                                <th>Email / Phone</th>
                                <th>Username</th>
                                <th style="display:none">Address</th>
                                <th>DOB / Gender</th>
                                <th>Hobby</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var user in Model)
                                {
                                    <tr>
                                        <td style="display:none">@index</td>
                                        <td>
                                            <img src="@Url.Content("~/uploads/" + (string.IsNullOrEmpty(user.Image) ? "default.png" : user.Image))"
                                                 class="img-circle elevation-2"
                                                 style="width: 40px; height: 40px; object-fit: cover;" />
                                            <div class="font-weight-bold">@user.Name</div>
                                            @* <small class="text-muted">ID: @user.Id</small> *@
                                        </td>
                                        <td>
                                            <strong>@(user.Email ?? "-")</strong><br />
                                            <span class="text-muted">@user.PhoneNumber</span>
                                        </td>
                                        <td>@(user.UserName ?? "-")</td>
                                        <td style="display:none">@(user.Address ?? "-")</td>
                                        <td>
                                            @(user.DOB?.ToString("dd/MM/yyyy") ?? "-")<br />
                                            @user.Gender
                                        </td>
                                        <td>@(user.Hobby ?? "-")</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-info text-white">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <button type="button"
                                                    class="btn btn-sm btn-danger text-white mt-1"
                                                    data-toggle="modal"
                                                    data-target="#deleteModal"
                                                    data-userid="@user.Id"
                                                    data-username="@user.UserName">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-danger">No users found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="deleteForm" method="post">
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete <strong id="deleteUserName"></strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div id="customAddButton" style="display: none;">
    <a href="@Url.Action("Create", "ManageUser")" class="btn btn-sm btn-primary ml-2">
        <i class="fas fa-user-plus"></i> Add User
    </a>
</div>

@section Scripts {
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css" />

    <script>
        $(document).ready(function () {
            var table = $('#userTable').DataTable({
                responsive: true,
                autoWidth: false,
                pageLength: 5, // ✅ Default rows per page
                lengthMenu: [5, 10, 25, 50], // ✅ Options in dropdown
                lengthChange: true,
                ordering: true,
                order: [[1, 'asc']],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search users...",
                    lengthMenu: "Show _MENU_ users",
                    zeroRecords: "No matching records found",
                    info: "Showing _START_ to _END_ of _TOTAL_ entries",
                    infoEmpty: "No entries available",
                    infoFiltered: "(filtered from _MAX_ total entries)"
                },
                columnDefs: [
                    { targets: 0, visible: false },
                    { orderable: false, targets: -1 }
                ]
            });

            // Inject "Add User" button into the search bar
            $('#userTable_filter').append($('#customAddButton').html());

            // Right-align search bar and button
            $('#userTable_filter').css({
                'display': 'flex',
                'justify-content': 'flex-end',
                'align-items': 'center',
                'gap': '10px' // add spacing between input and button
            });

            $('#userTable_filter input').css({
                'width': '250px'
            });

            // Handle delete modal
            $('#userTable').on('click', 'button[data-toggle="modal"]', function () {
                var userId = $(this).data('userid');
                var userName = $(this).data('username');

                $('#deleteUserName').text(userName);
                $('#deleteForm').attr('action', '/ManageUser/DeleteConfirmed/' + userId);
            });
        });
    </script>
}
